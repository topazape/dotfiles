#!/bin/sh

use_init () {
	source ./bin/activate
	mkdir -p $VIRTUAL_ENV/local/lib
}

use_rdkit () {
	export RDBASE="$VIRTUAL_ENV/RDKit"
	export LD_LIBRARY_PATH="$VIRTUAL_ENV/local/lib:$VIRTUAL_ENV/lib:$RDBASE/lib:/usr/local/cuda/lib64:$LD_LIBRARY_PATH"
	export PYTHONPATH="$VIRTUAL_ENV/local/lib/python:$PYTHONPATH"
	export IPYTHONDIR="$VIRTUAL_ENV/.ipython"
	export JUPYTER_CONFIG_DIR="$VIRTUAL_ENV/.jupyter"
	export MPLCONFIGDIR="$VIRTUAL_ENV/.matplotlib"
}

use_gpu () {
	export CUDA_VISIBLE_DEVICES=0
	export LD_LIBRARY_PATH="$VIRTUAL_ENV/local/lib:$VIRTUAL_ENV/lib:$RDBASE/lib:/usr/local/cuda/lib64:$LD_LIBRARY_PATH"
}
